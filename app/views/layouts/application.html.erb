<!DOCTYPE html>
<html>
  <head>
    <title>OdinProjectFlightBooker</title>
    <%= Gon::Base.render_data %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="flex gap-20 align-center">
      <%= link_to(root_path, data: { turbo: false }, class: 'flex align-center') do %>
        <svg style="width:36px;height:36px" viewBox="0 0 24 24">
          <path fill="currentColor" d="M20.56 3.91C21.15 4.5 21.15 5.45 20.56 6.03L16.67 9.92L18.79 19.11L17.38 20.53L13.5 13.1L9.6 17L9.96 19.47L8.89 20.53L7.13 17.35L3.94 15.58L5 14.5L7.5 14.87L11.37 11L3.94 7.09L5.36 5.68L14.55 7.8L18.44 3.91C19 3.33 20 3.33 20.56 3.91Z" />
        </svg>
        <span>Flight Booker</span>
      <% end %>

      <nav>
        <ul class="flex gap-20">
          <li><%= link_to 'Airlines', airlines_path %></li>
          <li><%= link_to 'Bookings', bookings_path %></li>
        </ul>
      </nav>
    </header>

    <main class="flex column gap-20">
      <% if flash.any? %>
        <div class="flash-messages align-self-center">
          <% flash.each do |type, msg| %>
            <% if %w[ alert notice ].include?(type) %>
              <p class="<%= type %>"><%= msg %></p>
            <% end %>
          <% end %>
        </div>
      <% end %>
  
      <%= yield %>
    </main>

    <div>
      <%= image_tag 'https://source.unsplash.com/random/1000x1600?airport', width: '100%', height: '100%' %>
    </div>
  </body>
</html>
