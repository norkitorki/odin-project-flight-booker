<h2 class="heading">Flight Details</h2>

<%= render 'flights/flight_query', flights: [@flight] %>

<h2 class="heading">Passengers</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @booking.passengers.each do |passenger| %>
        <tr>
          <td><%= passenger.name %></td>
          <td><%= passenger.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
